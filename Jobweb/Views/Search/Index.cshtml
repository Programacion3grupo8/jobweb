@model IEnumerable<Jobweb.Models.Listing>

@{
    ViewBag.Title = "Busqueda";
}

<div class="row row-cols-1 row-cols-md-2">
    @foreach (var item in Model)
    {
        <div class="col mb-4">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/Assets/placeholder.png" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h6 class="card-title">@Html.DisplayFor(modelItem => item.company)</h6>
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.posicion)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.ubicacion)</p>
                            <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.tipo)</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
