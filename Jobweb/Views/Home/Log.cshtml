
@{ 
    ViewBag.Title = "Login";
}

<div class="container card w-50">
    <div class="card-header">
        <span class="card-title h3">
            Login
        </span>
    </div>
    <div class="card-body">
        <span class="text-danger h4">@ViewBag.Error</span>
        <form class="form-group" method="post" action="~/Home/Log">
            <div class="form-group">
                <label for="user">Correo electronico</label>
                <input type="email" class="form-control" name="user" id="user" placeholder="Escribe tu correo electronico" value="@ViewBag.username" required/>
            </div>
            <div class="form-group">
                <label for="pass">Contraseña</label>
                <input type="password" class="form-control" name="pass" id="pass" placeholder="Escribe tu contraseña" required/>
            </div>
            <button type="submit" class="btn btn-outline-success">Iniciar sesion</button>
        </form>
        </div>
    </div>